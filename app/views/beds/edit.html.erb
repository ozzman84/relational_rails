<%= form_with url: "/beds/#{@bed.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/>
  <%= f.label :occupied %><br/>
  <%= f.text_field :occupied %><br/>
  <%= f.label :guest_count %><br/>
  <%= f.number_field :guest_count %><br/><br/>
  <%= f.submit "Update #{@bed.name}" %>
<% end %>
